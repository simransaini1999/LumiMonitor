<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lumimonitor">

    <!-- Grants permission to use webcam and save photos on device-->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true"></uses-feature>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTRENAl_STORAGE"></uses-permission>

    <!-- Application -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity android:name=".Change_Email"></activity>
        <activity android:name=".Change_Password" />
        <activity android:name=".Set_Language" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".Registration" />
        <activity android:name=".Settings" />
        <activity android:name=".MusicActivity" />
        <activity android:name=".LightActivity" />
        <activity android:name=".Lumi_Monitor" />
        <activity android:name=".Baby_Data" />
        <activity android:name=".BabyDataGraphs" />
        <activity android:name=".TestWriteDB" />
        <activity
            android:name=".Graph_Temperature"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Graph_Humidity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Graph_Light_Value"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


            <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>