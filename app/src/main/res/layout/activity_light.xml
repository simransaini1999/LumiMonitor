<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fillViewport="false"
    android:background="#121a38"
    tools:context=".LightActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121a38"
    android:orientation="vertical">

    <TextView
        android:id="@+id/colourWheelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Tap a colour to display on the Lumi Monitor "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0.917"
        />
    
    <ImageView
        android:id="@+id/colourWheel"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/colour2"/>

    <TextView
        android:id="@+id/colourTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="Lumi Colour: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"
        app:layout_constraintVertical_bias="0.917"
        />

    <View
        android:id="@+id/colourView"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <Switch
        android:id="@+id/whiteSwitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:text="White"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        />

    <Switch
        android:id="@+id/offSwitch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:text="Turn Off"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        />

    <Switch
        android:id="@+id/lightReact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:text="Turn Off Light Reaction"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/rgbValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="RGB: \nHEX: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        app:layout_constraintVertical_bias="0.917"
        android:visibility="gone"/>

    <Button
        android:id="@+id/tempButton"
        android:layout_marginStart="100dp"
        android:layout_width="211dp"
        android:layout_height="59dp"
        android:text="Enter Temp Database Values"
        android:visibility="gone"/>



</LinearLayout>
</ScrollView>
