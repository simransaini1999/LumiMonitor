        android:layout_width="111dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toTopOf="@+id/LightsText"
        app:layout_constraintEnd_toStartOf="@+id/goToMusic"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_lightbulb_yellow" />

    <ImageView
        android:id="@+id/goToMusic"
        android:layout_width="113dp"
        android:layout_height="77dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="102dp"
        app:layout_constraintBottom_toTopOf="@+id/MusicText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videoView"
